}

/**
 * Implements hook_preprocess_theme().
 */
function islandora_data_preprocess_islandora_data(array &$variables) {
  drupal_add_js('misc/form.js');
  drupal_add_js('misc/collapse.js');
  $islandora_object = $variables['islandora_object'];
  $repository = $islandora_object->repository;
  module_load_include('inc', 'islandora', 'includes/datastream');
  module_load_include('inc', 'islandora', 'includes/utilities');

  if (islandora_datastream_access(FEDORA_VIEW_OBJECTS, $islandora_object['DC'])) {
    try {
      $dc = $islandora_object['DC']->content;
      $dc_object = DublinCore::importFromXMLString($dc);
    }
    catch (Exception $e) {
      drupal_set_message(t('Error retrieving object %s %t', array('%s' => $islandora_object->id, '%t' => $e->getMessage())), 'error', FALSE);
    }
  }
  $variables['islandora_dublin_core'] = isset($dc_object) ? $dc_object : NULL;
  $variables['dc_array'] = isset($dc_object) ? $dc_object->asArray() : array();
  $variables['islandora_object_label'] = $islandora_object->label;
  $variables['theme_hook_suggestions'][] = 'islandora_data__' . str_replace(':', '_', $islandora_object->id);
  $variables['parent_collections'] = islandora_get_parents_from_rels_ext($islandora_object);
  global $base_url;

  // Thumbnail.
  if (isset($islandora_object['TN']) && islandora_datastream_access(FEDORA_VIEW_OBJECTS, $islandora_object['TN'])) {
    $thumbnail_size_url = url("islandora/object/{$islandora_object->id}/datastream/TN/view");
    $params = array(
      'title' => $islandora_object->label,
      'path' => $thumbnail_size_url,
    );
    $variables['islandora_thumbnail_img'] = theme('image', $params);
  }

  // Here we get all the datastreams in the current object and put them in an array
  // so we can display links to their Ethercalc renditions to the end user.
  $datastreams = array();
  foreach ($islandora_object as $ds) {
    try {
      $pid = $islandora_object->id;
      $id = $ds->id;
      $label = $ds->label;
      $download_path = islandora_datastream_get_url($ds, 'Download the ' . $label . ' version');
      $datastreams[$id]['id'] = $id;
      $datastreams[$id]['label'] = $label;
      $datastreams[$id]['label_link'] = islandora_datastream_access(FEDORA_VIEW_OBJECTS, $ds) ?
        l($label, $download_path) :
        $label;
      $datastreams[$id]['download_url'] = $download_path;
      $datastreams[$id]['mimetype'] = $ds->mimetype;
      $datastreams[$id]['size'] = islandora_datastream_get_human_readable_size($ds);
      $datastreams[$id]['created_date'] = $ds->createdDate->format("Y-m-d");
      $datastreams[$id]['class'] = drupal_strtolower(preg_replace('/[^A-Za-z0-9]/', '-', $id));
    }
    catch (RepositoryException $e) {
      // @todo: Display error to end user?
    }
  }
  $variables['csv_datastreams'] = $datastreams;

  // CSV datastream(s). 
  if (isset($islandora_object['CSV_DATA']) && islandora_datastream_access(FEDORA_VIEW_OBJECTS, $islandora_object['CSV_DATA'])) {
    $csv_data_url = url("islandora/object/{$islandora_object->id}/datastream/CSV_DATA/view", array('absolute' => TRUE));
    $variables['islandora_content'] = '';
    foreach ($datastreams as $csv_datastream_id => $csv_datastream_properties) {
      // We only want to present links to the Ethercalc URLs for datastreams that begin with 'CSV_DATA'.
      // There will be one per worksheet in the Excel and OpenOffice files.
      if (preg_match('/^CSV_DATA/', $csv_datastream_id)) {
        // @todo: Add the Ethercalc viewer instantiation here, and change the URLs below to
        // point to them:
        // 1) url -i -H "Content-Type: text/csv" -X POST --data-binary @islandora_foo.csv http://localhost:8000/_
        //   which return which returns the header: Location: /_/zmy8gm660u
        // 2) Ethercalc renders a Javascript viewer at curl http://localhost:8000/zmy8gm660u 
        // We want the viewer to appear in a new browser window. 
        $variables['islandora_content'] .= l(t("Download CSV version: ") . $csv_datastream_properties['label_link'], $csv_datastream_properties['download_url'], array('html' => TRUE));
      }
    }
  }

}

